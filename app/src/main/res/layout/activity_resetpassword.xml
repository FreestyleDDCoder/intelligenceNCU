<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_container3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingRelativeLayout
        android:id="@+id/srl_actionBar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:translationZ="8dp">

        <dym.unique.com.springinglayoutlibrary.view.SpringingImageView
            android:id="@+id/simg_back3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingRelativeLayout>

    <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
        android:id="@+id/sll_mainContainer3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <dym.unique.com.springinglayoutlibrary.view.SpringingImageView
            android:id="@+id/simg_eMail"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@mipmap/email"
            android:visibility="invisible" />

        <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="账号设置的邮箱号码"
            android:textSize="16dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="invisible">

            <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                android:id="@+id/stv_resetmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="邮箱"
                android:textColor="#666666"
                android:textSize="16sp" />

            <dym.unique.com.springinglayoutlibrary.view.SpringingEditText
                android:id="@+id/sedt_resetmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:hint="请输入你的邮箱号码"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
            android:id="@+id/stv_reset"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/drawable_regist_background"
            android:gravity="center"
            android:text="发送邮件"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="invisible" />

    </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>

</LinearLayout>